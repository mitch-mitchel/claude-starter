{
  "permissions": {
    "allow": [
      "Bash(git commit:*)",
      "Bash(git add:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git tag:*)",
      "Bash(tree:*)"
    ],
    "ask": [
      "Bash(docker:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Read(~/.bash_history)",
      "Read(~/.zsh_history)"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets/**)",
      "Read(**/credentials.json)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/*_rsa)",
      "Read(**/*_ed25519)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/credentials)",
      "Read(~/.aws/config)",
      "Read(~/.netrc)",
      "Read(~/.npmrc)",
      "Read(~/.pypirc)",
      "Read(~/.docker/config.json)",
      "Read(~/.kube/config)",
      "Read(~/.config/gh/hosts.yml)",
      "Read(~/.gnupg/**)",
      "Read(~/.config/gcloud/**)",
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(git push:*)",
      "Bash(git reset --hard:*)",
      "Bash(git restore:*)",
      "Bash(git clean:*)",
      "Bash(git checkout -f:*)",
      "Bash(git rebase:*)",
      "Bash(git stash drop:*)",
      "Bash(git stash clear:*)",
      "Bash(git branch -D:*)",
      "Bash(npm publish:*)",
      "Bash(yarn publish:*)"
    ],
    "additionalDirectories": [
      "~/work",
      "~/personal"
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": false,
    "excludedCommands": []
  }
}
