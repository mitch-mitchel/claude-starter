{
  "// CLAUDE CODE SETTINGS TEMPLATE": "Place at ~/.claude/settings.json",

  "permissions": {
    "// allow": "Commands Claude can run without asking permission",
    "allow": [
      "Bash(git commit:*)",
      "Bash(git add:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git tag:*)",
      "Bash(tree:*)"
    ],

    "// deny": "Commands/files Claude should NEVER access",
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets/**)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/credentials)",
      "Read(~/.aws/config)",
      "Bash(sudo:*)",
      "Bash(git push:*)",
      "Bash(git reset --hard:*)",
      "Bash(git restore:*)",
      "Bash(git clean:*)",
      "Bash(git checkout -f:*)"
    ],

    "// additionalDirectories": "Other directories Claude can access beyond cwd",
    "additionalDirectories": [
      "~/work",
      "~/personal"
    ]
  },

  "// sandbox": "Sandboxing protects your system from unintended changes",
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": false,
    "excludedCommands": []
  }
}
